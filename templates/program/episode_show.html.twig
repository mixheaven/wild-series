{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}


{% block body %}


<div class="media">

  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

  <div class="media-body">

    <h1 class="mt-0">{{ program.title }}</h1>

    <p>{{ program.summary }}</p>

    <p>Catégorie : {{ program.category.name }}</p>

  </div>
<h1>{{ season.description }}</h1>
</div>
    <ul>
        <li>Episode : {{ episode.number }}</li>
        <li>Titre : {{ episode.title }}</li>
        <li>Synopsis : {{ episode.synopsis }}</li>
    </ul>

<a href="{{ path('program_index') }}">Retour à la liste des programmes</a>


{% endblock %}